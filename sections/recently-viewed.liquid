<div 
    data-js-component="RecentlyViewed"
    data-js-props='{{ section.settings | json }}'>
</div>

{% schema %}
{
    "name": "Recently Viewed",
    "tag": "section",
    "class": "section",
    "presets": [
        {
            "name": "Recently Viewed"
        }
    ],
    "settings": [
        {
            "type": "text",
            "label": "Title",
            "id": "title",
            "default": "Recently Viewed and Our Picks"
        },
        {
            "type": "range",
            "label": "Padding",
            "id": "padding",
            "min": 0,
            "max": 50,
            "step": 5,
            "default": 10
        },
        {
            "type": "color",
            "label": "Button Color",
            "id": "button_background_color",
            "default": "#000000"
        },
        {
            "type": "color",
            "label": "Text Color",
            "id": "text_color",
            "default": "#333333"
        }
    ]
}
{% endschema %}